#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "grumlin"

require "irb"
require "irb/completion"

Grumlin.configure do |config|
  config.url = ENV["GREMLIN_URL"] || "ws://localhost:8182/gremlin"
end

Async do
  include Grumlin::Sugar

  IRB.start
ensure
  Grumlin.close
end
